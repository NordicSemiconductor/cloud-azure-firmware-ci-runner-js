{
  "name": "@nordicsemiconductor/firmware-ci-runner-azure",
  "version": "0.0.0-development",
  "description": "Runs firmware on a real device connected to Azure IoT hub.",
  "main": "./dist/export.js",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js.git"
  },
  "keywords": [
    "nrf-asset-tracker",
    "iot",
    "firmware",
    "end-to-end-testing",
    "azure"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js#readme",
  "dependencies": {
    "@azure/arm-resources-subscriptions": "2.0.2",
    "@azure/identity": "3.1.4",
    "@azure/storage-blob": "12.14.0",
    "@nordicsemiconductor/firmware-ci-device-helpers": "14.0.63",
    "@serialport/parser-readline": "11.0.0",
    "azure-iothub": "1.16.2",
    "semver": "7.5.0",
    "serialport": "11.0.0"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.29",
    "@swc/jest": "0.2.26",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.5",
    "@types/semver": "7.3.13",
    "@types/serialport": "8.0.2",
    "chalk": "5.2.0",
    "jest": "29.5.0"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "data",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+.spec.ts$"
  }
}
