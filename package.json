{
  "name": "@nordicsemiconductor/firmware-ci-runner-azure",
  "version": "0.0.0-development",
  "description": "Runs firmware on a real device connected to Azure IoT hub.",
  "main": "./dist/export.js",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "AssetTracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-runner-js#readme",
  "dependencies": {
    "@azure/identity": "1.5.2",
    "@azure/storage-blob": "12.8.0",
    "@nordicsemiconductor/firmware-ci-device-helpers": "11.0.1",
    "@serialport/parser-readline": "9.0.7",
    "azure-iothub": "1.14.4",
    "semver": "7.3.5",
    "serialport": "9.2.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-angular": "13.1.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "9.1.0",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "8.1.3",
    "@types/jest": "27.0.1",
    "@types/node": "16.7.8",
    "@types/semver": "7.3.8",
    "@types/serialport": "8.0.2",
    "@types/uuid": "8.3.1",
    "chalk": "4.1.2",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "lint-staged": "11.1.2",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "data",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "preset": "ts-jest",
    "testRegex": ".+.spec.ts$"
  }
}
